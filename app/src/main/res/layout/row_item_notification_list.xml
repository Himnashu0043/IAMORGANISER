<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen10"
    android:layout_margin="@dimen/dimen6"
    android:elevation="0dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen20"
            android:orientation="horizontal">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:src="@drawable/profile_icon"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimen10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvtittleTrans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/satoshi_black"
                    android:textColor="@color/textTrans"
                    android:textSize="18sp"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:text="Application sent"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/satoshi_regular"
                    android:textColor="#524B6B"
                    android:textSize="15sp"
                    android:layout_marginTop="@dimen/dimen10"
                    android:gravity="start"
                    android:text="Applications for Google companies have entered for company review"
                    />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/satoshi_regular"
                    android:textColor="#AAA6B9"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/dimen20"
                    android:gravity="start"
                    android:text="25 minutes ago"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>