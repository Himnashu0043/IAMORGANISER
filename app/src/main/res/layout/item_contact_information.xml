<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimen20"
    android:background="@drawable/blue_gradient_20"
    android:paddingVertical="@dimen/dimen16">

    <TextView
        android:id="@+id/tvContactInformation"
        style="@style/_boldS_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Information"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvContactNo"
        style="@style/_regularS_14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen20"
        android:drawableStart="@drawable/ic_call"
        android:drawablePadding="@dimen/dimen10"
        android:text="+1012 3456 789"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/tvContactInformation"
        app:layout_constraintStart_toStartOf="@+id/tvContactInformation"
        app:layout_constraintTop_toBottomOf="@+id/tvContactInformation" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCall"
        style="@style/_regularS_14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="@dimen/dimen30"
        android:layout_marginEnd="70dp"
        android:background="@drawable/white_15"
        android:text="Call"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvContactNo" />

    <ImageView
        android:id="@+id/ivTwitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen20"
        android:contentDescription="Logo"
        android:src="@drawable/twitter"
        app:layout_constraintEnd_toStartOf="@id/ivSnapchat"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCall" />

    <ImageView
        android:id="@+id/ivSnapchat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen16"
        android:contentDescription="Logo"
        android:src="@drawable/snapchat"
        app:layout_constraintBottom_toBottomOf="@id/ivTwitter"
        app:layout_constraintEnd_toStartOf="@id/ivInstagram"
        app:layout_constraintStart_toEndOf="@id/ivTwitter"
        app:layout_constraintTop_toTopOf="@+id/ivTwitter" />

    <ImageView
        android:id="@+id/ivInstagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Logo"
        android:src="@drawable/instagram"
        app:layout_constraintBottom_toBottomOf="@id/ivSnapchat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivSnapchat"
        app:layout_constraintTop_toTopOf="@+id/ivSnapchat" />

</androidx.constraintlayout.widget.ConstraintLayout>