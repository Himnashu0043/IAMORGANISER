<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen4"
    app:cardCornerRadius="@dimen/dimen10"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dimen10"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tvTicket"
            style="@style/_boldS_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ticket ID : "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTicketId"
            style="@style/_regularS_13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen16"
            android:text="#6234894562"
            app:layout_constraintEnd_toStartOf="@+id/tvTime"
            app:layout_constraintStart_toEndOf="@+id/tvTicket"
            app:layout_constraintTop_toTopOf="@+id/tvTicket" />

        <TextView
            android:id="@+id/tvTime"
            style="@style/_regularS_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/03/2023, 02:30 PM "
            app:layout_constraintBottom_toBottomOf="@+id/tvTicket"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTicket" />

        <TextView
            android:id="@+id/tvOrder"
            style="@style/_boldS_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen8"
            android:text="Order ID : "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTicketId" />

        <TextView
            android:id="@+id/tvOrderId"
            style="@style/_regularS_13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen8"
            android:text="#6234894562"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvOrder"
            app:layout_constraintTop_toBottomOf="@+id/tvTicketId" />

        <TextView
            android:id="@+id/tvReason"
            style="@style/_boldS_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen8"
            android:text="Reason : "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvOrderId" />

        <TextView
            android:id="@+id/tvArrivalTime"
            style="@style/_regularS_13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen8"
            android:layout_marginEnd="@dimen/dimen16"
            android:text="Late arrival time of\n service Provider"
            app:layout_constraintEnd_toStartOf="@+id/tvStatus"
            app:layout_constraintStart_toEndOf="@+id/tvReason"
            app:layout_constraintTop_toBottomOf="@+id/tvOrderId" />

        <TextView
            android:id="@+id/tvStatus"
            style="@style/_boldS_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen8"
            android:text="Status : "
            app:layout_constraintBottom_toBottomOf="@+id/tvArrivalTime"
            app:layout_constraintEnd_toStartOf="@+id/tvStatusUpdate" />

        <TextView
            android:id="@+id/tvStatusUpdate"
            style="@style/_regularS_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:textColor="@color/green"
            app:layout_constraintBottom_toBottomOf="@+id/tvStatus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvStatus" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>