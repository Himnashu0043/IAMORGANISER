<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="false">
        <shape android:shape="oval">
            <stroke android:width="@dimen/dimen1" android:color="@color/dark_grey" />

        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="oval">
            <stroke android:width="@dimen/dimen1" android:color="@color/white" />
            <gradient android:angle="270" android:endColor="@color/blue_light" android:startColor="@color/blue_dark" />
        </shape>
    </item>

</selector>